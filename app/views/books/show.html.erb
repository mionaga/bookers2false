<!--user情報-->
<%= render 'info', user:@user %>

<!--NewBookの投稿-->
<%= render 'create_book', book:@book %>

<!--book詳細-->
<div>
  <table class="book-table">
  <h2>Book detail</h2>
  <thead>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  
  
  <% if @book.user == current_user %>
   <% link_to edit_book_path(@book.id) do %>
    <tbody>
     <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= @book.user.name %></td> 
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
     </tr>
     </tbody>
   <% end %>
  <% end %>
  
  <% if @book.user == current_user %>
    <%= link_to"Edit",edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book.id), method: :delete %>
  <% end %>
  
  </table>
</div>
