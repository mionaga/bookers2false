<!--user情報-->
<h1>User info</h1>
<div>

  <%= image_tag @user.get_profile_image(100,100) %>

  <h3>name<%= @user.name %></h3>
  <h3>introduction<%= @user.body %></h3>
  <p><%= link_to "プロフィール編集", users_path(@user.id)  %></p>

</div>

<!--NewBookの投稿-->
<h1>New Book</h1>
<%= form_with model: @book_new do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create book' %>

<% end %>


<!--book詳細-->
<div>
  <h2>Book detail</h2>
  <p>Title：<%= @book.title %></p>
  <p>opinion：<%= @book.body %></p>
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <!--投稿日時-->

  <% if @book.user == current_user %>
    <%= link_to"Edit",books_path(@book.id) %>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
