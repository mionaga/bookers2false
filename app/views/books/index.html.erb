

<!--user情報-->
<h1>User info</h1>
<div>

  <%= image_tag @user.get_profile_image(200,200) %>

  <h3>name<%= @user.name %></h3>
  <h3>introduction<%= @user.body %></h3>
  <p><%= link_to "プロフィール編集", users_path(@user.id)  %></p>

</div>

<!--NewBookの投稿-->
<div>
  <h1>New Book</h1>
  <%= form_with model: @book_new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'create book' %>

  <% end %>
</div>

<!--Books一覧画面-->
<h1>Books</h1>

<table class="books-table">
  <thead>
    <th>Title</th>
    <th>Opinion</th>
  </thead>


    <tbody>
    <% @books.each do |book| %>

     <%= image_tag book.user.get_profile_image(100,100) %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><% link_to book_path(book.id)  %></td>
      </tr>
    <% end %>
    </tbody>


</table>


