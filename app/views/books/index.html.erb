<!--user情報-->
<%= render 'info', user:@user %>


<!--NewBookの投稿-->
<%= render 'create_book', book:@book %>


<!--Books一覧画面-->
<h1>Books</h1>

<table class="books-table">
  <thead>
    <th>Title</th>
    <th>Opinion</th>
  </thead>


    <tbody>
    <% @books.each do |book| %>

     <%= image_tag book.user.get_profile_image(100,100) %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><% link_to book_path(book.id)  %></td>
      </tr>
    <% end %>
    </tbody>


</table>


